# DorkNexus npm configuration
# Ensures consistent behavior across different systems

# Use exact versions when installing
save-exact=true

# Generate package-lock.json
package-lock=true

# Fail on peer dependency issues
strict-peer-dependencies=false

# Set default registry
registry=https://registry.npmjs.org/

# Improve installation reliability
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Engine version enforcement
engine-strict=true
